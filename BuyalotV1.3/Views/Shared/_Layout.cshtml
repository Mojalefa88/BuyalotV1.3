@using BuyalotV1._3.Repository;

@{ 
    ICategoryRepository iCategoryRepository = new CategoryRepository();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Buyalot</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                @Html.ActionLink(".", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="active" href="#home"><i class="glyphicon glyphicon-home glyphicon-white"></i> Home</a></li>
                    <li><a href="#about">About Us</a></li>
                    <li><a href="#contactUs">Contact US</a></li>

                </ul>


                <div class="collapse navbar-collapse navHeaderCollapse">

                    <ul class="nav navbar-nav navbar-right">

                        <li><a href="#"> Welcome</a></li>
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Register</a></li>
                        <li class="dropdown">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Track Order</a></li>
                                <li><a href="#">My Profile</a></li>

                            </ul>

                        </li>

                    </ul>

                </div>

            </div>

        </div>
    </div>

    <hr />
    <div class="container">
        <ul class="nav navbar-left col-lg-2">
            <li class="dropdown">
                <div class="dropdown-toggle" data-toggle="dropdown">Browse By Category<b class="caret"></b></div>
                <ul class="dropdown-menu">
                    @foreach (var category in iCategoryRepository.findAll())
            {
                        <li><a href="#">@category.categoryName</a></li>
                    }

                </ul>
            </li>
        </ul>

        <input type="search" class="form-control" style="max-width:900px;" id="searchProducts" onkeyup="myFunction()" placeholder="search for product" />

    </div>

    <div class="container">
        @RenderBody()
    </div>


    <div class="container body-content  ">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Buyalot</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</body>
</html>